<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NalburTech</title>
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", required: false)

    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container">
            @Html.ActionLink("🔧 NalburTech", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fw-bold text-warning" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Anasayfa", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Ürünler", "Product", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Hakkımızda", "About", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("İletişim", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>
                </ul>
                <div class="d-flex">
                    @Html.Partial("_LoginPartial")
                </div>
                <span class="ms-2">
                    @Html.ActionLink(
                        "Admin","Index","Admin", null, new { @class = "btn btn-outline-warning btn-sm" }
                    )
                </span>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white mt-auto py-4">
        <div class="container text-center">
            <p class="mb-1">&copy; @DateTime.Now.Year - NalburTech</p>
            <p>
                <i class="fas fa-phone-alt"></i> +90 212 000 0000 |
                <i class="fas fa-envelope"></i> info@nalburtech.com
            </p>
            <div>
                <a href="#" class="text-white me-2"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white me-2"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-white"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
