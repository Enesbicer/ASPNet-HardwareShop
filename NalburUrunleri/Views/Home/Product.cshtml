@model List<NalburUrunleri.Models.ProductTable>

<h2>Ürünler</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Ürün</th>
                <th>Fiyat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urun in Model)
            {
                <tr>
                    <td>@urun.Name</td>
                    <td>@urun.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>
