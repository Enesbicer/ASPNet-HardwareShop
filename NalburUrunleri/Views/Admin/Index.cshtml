<table border="1" class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in ViewBag.urunler)
        {
            <tr>
                <td>@urun.Id</td>
                <td>@urun.Name</td>
                <td>@urun.Price</td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", "Admin", new { id = urun.Id }, new { @class = "btn btn-primary btn-sm me-2" })
                    @Html.ActionLink("Sil", "Delete", "Admin", new { id = urun.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Ekle", "Create", "Admin", null, new { @class = "btn btn-success mt-3" })